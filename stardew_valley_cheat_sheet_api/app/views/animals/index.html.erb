
<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
  
      <th>Cost</th>
      <th>Requirements</th>
      <th>Produce</th>
      <th>Sell price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
   
        <td><%= animal.cost %></td>
        <td><%= animal.requirements %></td>
        <td><%= animal.produce %></td>
        <td><%= animal.sell_price %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal', new_animal_path %>
