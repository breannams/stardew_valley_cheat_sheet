

<h1>Crops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Img</th>
      <th>Season</th>
      <th>Grow</th>
      <th>Time</th>
      <th>Sell price</th>
      <th>Uses</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crops.each do |crop| %>
      <tr>
        <td><%= crop.name %></td>
 
        <td><%= crop.season %></td>
        <td><%= crop.grow_time %></td>

        <td><%= crop.sell_price %></td>
        <td><%= crop.uses %></td>
        <td><%= crop.cost %></td>
        <td><%= link_to 'Show', crop %></td>
        <td><%= link_to 'Edit', edit_crop_path(crop) %></td>
        <td><%= link_to 'Destroy', crop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

